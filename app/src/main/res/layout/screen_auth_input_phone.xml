<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Qahvazor"
        android:textColor="@color/primary_300"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_phone_desc"
        style="@style/TopDescriptionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Your phone number:"
        app:layout_constraintBottom_toTopOf="@id/inputPhoneLayout"
        app:layout_constraintLeft_toLeftOf="parent" />

    <uz.i_tv.domain.ui.views.CustomTextInputLayout
        android:id="@+id/inputPhoneLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.InputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/title">

        <uz.i_tv.domain.ui.views.maskededittext.MaskedEditText
            android:id="@+id/inputPhone"
            style="@style/InputStyle"
            android:digits="1234567890"
            android:drawableStart="@drawable/ic_phone"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:text="+998 "
            app:mask="+### ## ###-##-##" />

    </uz.i_tv.domain.ui.views.CustomTextInputLayout>

    <CheckBox
        android:id="@+id/publicCheckbox"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_checkbox"
        android:button="@color/primary"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@id/privacy_policy"
        app:layout_constraintStart_toStartOf="@id/inputPhoneLayout"
        app:layout_constraintTop_toBottomOf="@id/inputPhoneLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/privacy_policy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="@string/privacy_policy_desc"
        android:textColor="@color/black_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/publicCheckbox"
        app:layout_constraintTop_toBottomOf="@id/inputPhoneLayout" />

    <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btSend"
        style="@style/PrimaryColorButtonStyle"
        android:layout_marginTop="15dp"
        android:text="Continue"
        android:textAllCaps="false"
        app:finalCornerAngle="10dp"
        app:initialCornerAngle="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy"
        app:spinning_bar_color="@color/white"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>