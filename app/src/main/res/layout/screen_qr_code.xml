<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:paddingVertical="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Avaiable time:"
            android:textColor="@color/black_300"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/timer"
            app:layout_constraintEnd_toEndOf="@id/timer"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:lineHeight="40sp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/black_300"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/qr_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00:10" />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="QR Code"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            tools:src="@drawable/ic_qr_code" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/refresh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_corner20_white"
            android:elevation="4dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@id/qr_code"
            app:layout_constraintEnd_toEndOf="@id/qr_code"
            app:layout_constraintStart_toStartOf="@id/qr_code"
            app:layout_constraintTop_toTopOf="@id/qr_code"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_refresh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>