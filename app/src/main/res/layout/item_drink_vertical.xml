<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_item_coffee"
    android:clipToPadding="false"
    android:elevation="0dp"
    android:foreground="@drawable/ripple_corner12"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primaryVariant"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ItemCoffeeImageAppearance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/black_300"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:text="Cappuccino" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/top_up"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_corner22_primary300"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:text="Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

</androidx.constraintlayout.widget.ConstraintLayout>