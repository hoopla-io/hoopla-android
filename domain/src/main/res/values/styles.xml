<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryColorButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/bg_corner14_primary300</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/bg_corner14_grey200</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black_300</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black_300</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.InputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">#919CB2</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
        <item name="errorTextAppearance">@style/errorAppearance</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="TopDescriptionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="errorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_300</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="hintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="ItemCompanyImageAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

</resources>